---
import '@fontsource/petit-formal-script';

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>ibsy</title>
	</head>
	<body>
		<div class="layout_container">
			<img src="./communion.svg" alt="">
			<h1>i'll be seeing you...</h1>
			<h3>coming soon</h3>
		</div>
	</body>
</html>


<style>
	:root {
		--dark: #1e1e1e;
		--pink: #8d6e7e;
		--light: #AEAEAE;

		--script: "Petit Formal Script", cursive; 
	}
	body {
		background-color: var(--dark);
		margin: auto;
		max-width: 70vw;
	}
	.layout_container {
		height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	svg {
		display: flex;
	}

	h1 {
		font-family: var(--script);
		text-align: center;
		color: var(--pink);
		font-size: calc(36px + (96 - 36) * ((70vw - 400px) / (1400 - 400)));
		margin: 0;
	}

	h3 {
		font-family: var(--script);
		text-align: center;
		color: var(--light);
		font-size: calc(28px + (72 - 28) * ((70vw - 400px) / (1400 - 400)));
		margin: 0;
		margin-top: 4rem
	}

	img {
		aspect-ratio: 1/1;
		object-fit: contain;
		max-width: 100%;
		margin-bottom: 2rem;
	}
</style>